{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "./wwwroot/js",
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noEmit": false
  },
  "include": ["./Scripts/**/*.ts"],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
